<!-- Search and filter-->
<div class="mb-16 grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
  <div>
    <blockquote class="pl-6 py-2">
      <p class="text-xl lg:text-2xl text-gray-700 italic mb-4 text-pretty">
        "A lot of people... are afraid of pictures which have visible emotions in them. They feel calmer in front of pictures which are placid"
      </p>
      <cite class="text-gray-600 not-italic font-semibold">â€” Howard Hodgkin</cite>
    </blockquote>
  </div>

  <div>
    <%= form_with url: gallery_all_path, method: :get do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Keyword Search (top left) -->
        <div>
          <%= f.text_field :s, 
              placeholder: "Search by keyword",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" %>
        </div>

        <!-- Date Filter (top right) -->
        <div>
          <%= f.select :dates, 
              options_for_select([
                ["All dates", ""],
                ["2020-2025", "2020-2025"],
                ["2010-2019", "2010-2019"],
                ["2000-2009", "2000-2009"],
                ["1990-1999", "1990-1999"],
                ["1980-1989", "1980-1989"],
                ["1970-1979", "1970-1979"],
                ["1960-1969", "1960-1969"],
                ["1950-1959", "1950-1959"],
                ["1940-1949", "1940-1949"]
              ]),
              {},
              class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent" %>
        </div>

        <!-- Type Filter (bottom left) -->
        <div>
          <%= f.select :type,
              options_for_select([
                ["All types", gallery_all_path],
                ["Paintings", gallery_paintings_path],
                ["Prints", gallery_prints_path],
                ["Indian Leaves", gallery_indian_leaves_path],
                ["Indian Waves", gallery_indian_waves_path],
                ["Design", gallery_design_path],
                ["Other", gallery_other_path],
                ["Missing Works", gallery_missing_works_path],
                ["Destroyed", gallery_destroyed_path],
                ["Memories of Bombay / Mumbai", gallery_memories_of_bombay_mumbai_path],
                ["Quantel Paintbox", gallery_quantel_paintbox_path]
              ]),
              {},
              class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent",
              onchange: "if(this.value && this.value.startsWith('/')) window.location.href = this.value;" %>
        </div>

        <!-- Submit Button (bottom right) -->
        <div>
          <%= f.submit "Search", 
              class: "w-full bg-black text-white py-3 px-6 rounded-md hover:bg-gray-800 transition-colors cursor-pointer font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mb-16">  
  <% if @gallery_categories.present? %>
    <!-- display category pages -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @gallery_categories.each do |category_page| %>
        <%= link_to category_page.path, class: "group block hover:text-blue-800" do %>
          <% if category_page.cloudinary_public_id.present? %>
            <div class="aspect-[3/2] overflow-hidden">
              <%= image_tag category_page.thumbnail_url, 
                  alt: category_page.title,
                  class: "w-full h-full bg-cover bg-center" %>
            </div>
          <% end %>
          
          <div>
            <h3 class="text-xl font-semibold mt-4 mb-2"><%= category_page.title %></h3>
            
            <% if category_page.description.present? %>
              <p class="text-gray-500 group-hover:text-blue-400 mb-3 text-pretty"><%= category_page.description %></p>
            <% end %>
          </div>
        <% end %>
      <% end %>
      
      <!-- Missing works -->
      <% if @special_collections.present? %>
        <% missing_works = @special_collections.find { |cat| cat.title == "Missing Works" } %>
        <% if missing_works.present? %>
          <%= link_to missing_works.path, class: "group block hover:text-blue-800" do %>
            <% if missing_works.cloudinary_public_id.present? %>
              <div class="aspect-[3/2] overflow-hidden">
                <%= image_tag missing_works.thumbnail_url, 
                    alt: missing_works.title,
                    class: "w-full h-full bg-cover bg-center" %>
              </div>
            <% end %>
            
            <div>
              <h3 class="text-xl font-semibold mt-4 mb-2"><%= missing_works.title %></h3>
              
              <% if missing_works.description.present? %>
                <p class="text-gray-500 group-hover:text-blue-400 mb-3 text-pretty"><%= missing_works.description %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- default display fallback -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= link_to gallery_paintings_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Paintings</h3>
        <p class="text-gray-600"><%= @categories[:paintings] %> works</p>
      <% end %>

      <%= link_to gallery_prints_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Prints</h3>
        <p class="text-gray-600"><%= @categories[:prints] %> works</p>
      <% end %>

      <%= link_to gallery_design_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Design</h3>
        <p class="text-gray-600"><%= @categories[:design] %> works</p>
      <% end %>

      <%= link_to gallery_indian_leaves_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Indian Leaves</h3>
        <p class="text-gray-600"><%= @categories[:indian_leaves] %> works</p>
      <% end %>

      <%= link_to gallery_indian_waves_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Indian Waves</h3>
        <p class="text-gray-600"><%= @categories[:indian_waves] %> works</p>
      <% end %>

      <%= link_to gallery_quantel_paintbox_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Quantel Paintbox</h3>
        <p class="text-gray-600"><%= @categories[:quantel_paintbox] %> works</p>
      <% end %>

      <%= link_to gallery_memories_of_bombay_mumbai_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Memories of Bombay / Mumbai</h3>
        <p class="text-gray-600"><%= @categories[:memories_of_bombay_mumbai] %> works</p>
      <% end %>

      <%= link_to gallery_other_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Other</h3>
        <p class="text-gray-600"><%= @categories[:other] %> works</p>
      <% end %>
      
      <!-- Missing works fallback -->
      <%= link_to gallery_missing_works_path, class: "group block hover:text-blue-800" do %>
        <h3 class="text-xl font-semibold mt-4 mb-2">Missing Works</h3>
        <p class="text-gray-600"><%= @special_collections_fallback[:missing_works] %> works</p>
      <% end %> 
    </div>
  <% end %>
</div>