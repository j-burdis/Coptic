<div class="mb-16 grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
  <%# Quote %>

  <%# Search function %>
</div>

<div class="mb-16">  
  <% if @gallery_categories.present? %>
    <!-- display category pages -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @gallery_categories.each do |category_page| %>
        <%= link_to category_page.path, class: "group block border border-gray-200 hover:border-black transition-colors overflow-hidden" do %>
          <% if category_page.cloudinary_public_id.present? %>
            <div class="aspect-video overflow-hidden">
              <%= image_tag category_page.thumbnail_url, 
                  alt: category_page.title,
                  class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
            </div>
          <% end %>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2 group-hover:underline"><%= category_page.title %></h3>
            
            <% if category_page.description.present? %>
              <p class="text-gray-600 mb-3 line-clamp-3"><%= category_page.description %></p>
            <% end %>
            
            <p class="text-sm text-gray-500"><%= category_page.artwork_count %> works</p>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- default display fallback -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= link_to gallery_paintings_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Paintings</h3>
        <p class="text-gray-600"><%= @categories[:paintings] %> works</p>
      <% end %>

      <%= link_to gallery_prints_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Prints</h3>
        <p class="text-gray-600"><%= @categories[:prints] %> works</p>
      <% end %>

      <%= link_to gallery_design_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Design</h3>
        <p class="text-gray-600"><%= @categories[:design] %> works</p>
      <% end %>

      <%= link_to gallery_indian_leaves_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Indian Leaves</h3>
        <p class="text-gray-600"><%= @categories[:indian_leaves] %> works</p>
      <% end %>

      <%= link_to gallery_indian_waves_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Indian Waves</h3>
        <p class="text-gray-600"><%= @categories[:indian_waves] %> works</p>
      <% end %>

      <%= link_to gallery_quantel_paintbox_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Quantel Paintbox</h3>
        <p class="text-gray-600"><%= @categories[:quantel_paintbox] %> works</p>
      <% end %>

      <%= link_to gallery_memories_of_bombay_mumbai_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Memories of Bombay / Mumbai</h3>
        <p class="text-gray-600"><%= @categories[:memories_of_bombay_mumbai] %> works</p>
      <% end %>

      <%= link_to gallery_other_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Other</h3>
        <p class="text-gray-600"><%= @categories[:other] %> works</p>
      <% end %>
    </div>
  <% end %>
</div>

<div> <!-- special collections (if present) -->
  <h2 class="text-2xl font-semibold mb-6">Special Collections</h2>
  
  <% if @special_collections.present? %>
    <!-- special collection pages (all, missing, destroyed) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @special_collections.each do |category_page| %>
        
        
        <%= link_to category_page.path, class: "group block border border-gray-200 hover:border-black transition-colors overflow-hidden" do %>
          <% if category_page.cloudinary_public_id.present? %>
            <div class="aspect-video overflow-hidden">
              <%= image_tag category_page.thumbnail_url, 
                  alt: category_page.title,
                  class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
            </div>
          <% end %>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2 group-hover:underline"><%= category_page.title %></h3>
            
            <% if category_page.description.present? %>
              <p class="text-gray-600 mb-3 line-clamp-3"><%= category_page.description %></p>
            <% end %>
            
            <p class="text-sm text-gray-500"><%= category_page.artwork_count %> works</p>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- default display fallback -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= link_to gallery_missing_works_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Missing Works</h3>
        <p class="text-gray-600"><%= @special_collections_fallback[:missing_works] %> works</p>
      <% end %>

      <%= link_to gallery_destroyed_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">Destroyed</h3>
        <p class="text-gray-600"><%= @special_collections_fallback[:destroyed] %> works</p>
      <% end %>

      <%= link_to gallery_all_path, class: "group block p-6 border border-gray-200 hover:border-black transition-colors" do %>
        <h3 class="text-xl font-semibold mb-2 group-hover:underline">All Artworks</h3>
        <p class="text-gray-600">View all</p>
      <% end %>
    </div>
  <% end %>
</div>