<div class="bg-white">
  <div class="container mx-auto py-4">

    <div class="lg:flex lg:gap-40">      
      <!-- left col - image -->
      <div class="lg:w-3/5 mb-8 lg:mb-0">
        <div class="sticky top-24 lg:w-4/5">
          <% if @artwork.cloudinary_public_id.present? %>
            <%= image_tag @artwork.large_url, 
                alt: @artwork.title,
                class: "w-full h-auto" %>
          <% else %>
            <div class="w-full aspect-square bg-gray-100 flex items-center justify-center">
              <i class="fa-solid fa-image text-6xl text-gray-300"></i>
            </div>
          <% end %>
        </div>
      </div>

      <!-- right col - details -->
      <div class="lg:w-2/5">
        <!-- breadcrumbs -->
        <nav class="mb-4">
          <ul class="flex items-center text-sm text-gray-600 space-x-2">
            <li><%= link_to "Gallery", gallery_root_path, class: "hover:text-blue-800" %></li>
            <li><span class="text-gray-400">â€º</span></li>
            <li><%= link_to @artwork.category.titleize, category_path_for(@artwork.category), class: "hover:text-blue-800" %></li>
          </ul>
        </nav>

        <div class="max-w-xl">
          <h1 class="text-3xl lg:text-4xl font-normal mb-6"><%= @artwork.title %></h1>
          
          <div class="space-y-2 mb-8 text-base leading-relaxed">
            <% if @artwork.year.present? %>
              <p class="text-gray-900"><%= @artwork.year_range %></p>
            <% end %>
            
            <% if @artwork.dimensions.present? %>
              <p class="text-gray-900"><%= @artwork.dimensions %></p>
            <% end %>
            
            <% if @artwork.medium.present? %>
              <p class="text-gray-900"><%= @artwork.medium %></p>
            <% end %>

            <% if @artwork.status != "active" %>
              <p class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-md text-sm mt-2">
                <%= @artwork.status.titleize %>
              </p>
            <% end %>
          </div>

          <% if @artwork.description.present? %>
            <div class="prose max-w-none mb-12 text-gray-700 leading-relaxed">
              <%= simple_format(@artwork.description) %>
            </div>
          <% end %>

          <%= render 'artwork_collections', artwork: @artwork if @artwork.collections.any? %>
        </div>
      </div>
    </div>

    <%= render 'artwork_exhibitions', artwork: @artwork if @artwork.exhibitions.any? %>

  </div>
</div>