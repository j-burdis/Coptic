<div class="min-h-screen bg-white">
  <div class="container mx-auto px-4 py-4">

    <div class="lg:flex lg:gap-32">
      
      <!-- Left Column: Image -->
      <div class="lg:w-2/3 mb-8 lg:mb-0">
        <div class="sticky top-24 lg:w-2/3">
          <% if @artwork.cloudinary_public_id.present? %>
            <%= image_tag @artwork.large_url, 
                alt: @artwork.title,
                class: "w-full h-auto" %>
          <% else %>
            <div class="w-full aspect-square bg-gray-100 flex items-center justify-center">
              <i class="fa-solid fa-image text-6xl text-gray-300"></i>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Details -->
      <div class="lg:w-1/3">
        <!-- Breadcrumbs -->
        <nav class="mb-4">
          <ul class="flex items-center text-sm text-gray-600 space-x-2">
            <li><%= link_to "Gallery", gallery_root_path, class: "hover:text-blue-800" %></li>
            <li><span class="text-gray-400">â€º</span></li>
            <li><%= link_to @artwork.category.titleize, category_path_for(@artwork.category), class: "hover:text-blue-800" %></li>
          </ul>
        </nav>

        <div class="max-w-xl">
          <h1 class="text-3xl lg:text-4xl font-normal mb-6"><%= @artwork.title %></h1>
          
          <div class="space-y-2 mb-8 text-base leading-relaxed">
            <% if @artwork.year.present? %>
              <p class="text-gray-900"><%= @artwork.year_range %></p>
            <% end %>
            
            <% if @artwork.dimensions.present? %>
              <p class="text-gray-900"><%= @artwork.dimensions %></p>
            <% end %>
            
            <% if @artwork.medium.present? %>
              <p class="text-gray-900"><%= @artwork.medium %></p>
            <% end %>

            <% if @artwork.status != "active" %>
              <p class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-md text-sm mt-2">
                <%= @artwork.status.titleize %>
              </p>
            <% end %>
          </div>

          <% if @artwork.description.present? %>
            <div class="prose max-w-none mb-12 text-gray-700 leading-relaxed">
              <%= simple_format(@artwork.description) %>
            </div>
          <% end %>

          <% if @artwork.collections.any? %>
            <div class="mb-12">
              <h2 class="text-lg font-semibold mb-4">Collections</h2>
              <ul class="space-y-3">
                <% @artwork.collections.each do |collection| %>
                  <li class="text-gray-700">
                    <%= link_to collection_path(collection.slug), 
                        class: "hover:text-black" do %>
                      <span class="font-medium"><%= collection.name %></span>
                      <% if collection.location.present? %>
                        <br>
                        <span class="text-sm text-gray-600"><%= collection.location %></span>
                      <% end %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% if @artwork.exhibitions.any? %>
            <div class="mb-12">
              <h2 class="text-lg font-semibold mb-6">Exhibitions</h2>
              <div class="space-y-8">
                <% @artwork.exhibitions.order(year: :desc).each do |exhibition| %>
                  <div class="border-b border-gray-200 pb-6 last:border-0">
                    <%= link_to exhibition_path(exhibition.slug), 
                        class: "block group" do %>
                      <% if exhibition.image.present? %>
                        <div class="aspect-[4/3] bg-gray-100 mb-4 overflow-hidden">
                          <%= image_tag exhibition.image, 
                              alt: exhibition.title,
                              class: "w-full h-full object-cover group-hover:opacity-90 transition-opacity" %>
                        </div>
                      <% end %>
                      
                      <h3 class="font-medium text-gray-900 group-hover:text-black mb-2">
                        <% if exhibition.venue.present? %>
                          <%= exhibition.venue %>
                        <% end %>
                        <%= exhibition.title %>
                      </h3>
                      
                      <p class="text-sm text-gray-600">
                        <% if exhibition.location.present? %>
                          <%= exhibition.location %>
                        <% end %>
                        <% if exhibition.location.present? && exhibition.dates.present? %>
                          <br>
                        <% end %>
                        <% if exhibition.dates.present? %>
                          <%= exhibition.dates %>
                        <% elsif exhibition.year.present? %>
                          <%= exhibition.year %>
                        <% end %>
                      </p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>