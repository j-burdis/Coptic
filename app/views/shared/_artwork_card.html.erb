<%= link_to artwork_path(artwork.slug), class: "group block" do %>
  <div class="relative aspect-square mb-3 bg-gray-100 overflow-hidden">
    <% if artwork.cloudinary_public_id.present? %>
      <%= image_tag artwork.thumbnail_url, 
          alt: artwork.title,
          class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <i class="fa-solid fa-image text-4xl text-gray-300"></i>
      </div>
    <% end %>
    
    <!-- status badge -->
    <% if artwork.status != "active" %>
      <div class="absolute top-2 right-2 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded">
        <%= artwork.status.titleize %>
      </div>
    <% end %>
  </div>
  
  <div class="space-y-1">
    <h3 class="font-semibold text-lg group-hover:underline"><%= artwork.title %></h3>
    
    <% if artwork.year.present? %>
      <p class="text-sm text-gray-600"><%= artwork.year_range %></p>
    <% end %>
    
    <% if artwork.medium.present? %>
      <p class="text-sm text-gray-500"><%= truncate(artwork.medium, length: 60) %></p>
    <% end %>
  </div>
<% end %>