<%= link_to collection.path, class: "group block" do %>
  <div>
    <h3 class="font-semibold text-base mb-1 group-hover:text-blue-800 transition-colors">
      <%= collection.name %>
    </h3>
    
    <% if collection.location.present? %>
      <p class="text-sm text-gray-600"><%= collection.location %></p>
    <% end %>
    
    <% if collection.region.present? %>
      <p class="text-xs text-gray-500 mt-1">
        <span class="inline-block px-2 py-1 bg-gray-200 rounded">
          <%= collection.region %>
        </span>
      </p>
    <% end %>
    
    <% if collection.artwork_count > 0 %>
      <p class="text-sm text-gray-500 mt-2">
        <%= pluralize(collection.artwork_count, 'artwork') %>
      </p>
    <% end %>
  </div>
<% end %>
