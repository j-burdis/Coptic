<div class="min-h-screen bg-white">
  <div class="container mx-auto px-4 py-8 lg:py-16">
    
    <!-- Breadcrumb -->
    <nav class="mb-8 text-sm text-gray-600">
      <%= link_to "Gallery", gallery_root_path, class: "hover:text-black" %>
      <span class="mx-2">/</span>
      <%= link_to @artwork.category.titleize, gallery_paintings_path, class: "hover:text-black" %>
      <span class="mx-2">/</span>
      <span class="text-black"><%= @artwork.title %></span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
      
      <!-- Image -->
      <div class="order-2 lg:order-1">
        <div class="sticky top-24">
          <% if @artwork.cloudinary_public_id.present? %>
            <%= image_tag @artwork.large_url, 
                alt: @artwork.title,
                class: "w-full h-auto shadow-lg" %>
          <% else %>
            <div class="w-full aspect-square bg-gray-100 flex items-center justify-center">
              <i class="fa-solid fa-image text-6xl text-gray-300"></i>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Details -->
      <div class="order-1 lg:order-2">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= @artwork.title %></h1>
        
        <div class="space-y-3 mb-8 text-lg">
          <% if @artwork.year.present? %>
            <p class="text-gray-700"><%= @artwork.year_range %></p>
          <% end %>
          
          <% if @artwork.medium.present? %>
            <p class="text-gray-700"><%= @artwork.medium %></p>
          <% end %>
          
          <% if @artwork.dimensions.present? %>
            <p class="text-gray-600"><%= @artwork.dimensions %></p>
          <% end %>

          <% if @artwork.status != "active" %>
            <p class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-md">
              <%= @artwork.status.titleize %>
            </p>
          <% end %>
        </div>

        <!-- Description -->
        <% if @artwork.description.present? %>
          <div class="prose prose-lg max-w-none mb-8">
            <%= simple_format(@artwork.description) %>
          </div>
        <% end %>

        <!-- Collections -->
        <% if @artwork.collections.any? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4">Collections</h2>
            <ul class="space-y-2">
              <% @artwork.collections.each do |collection| %>
                <li>
                  <%= link_to collection_path(collection.slug), 
                      class: "text-black hover:underline" do %>
                    <strong><%= collection.name %></strong>
                    <% if collection.location.present? %>
                      <span class="text-gray-600"> — <%= collection.location %></span>
                    <% end %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Exhibitions -->
        <% if @artwork.exhibitions.any? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-4">Exhibitions</h2>
            <ul class="space-y-2">
              <% @artwork.exhibitions.order(year: :desc).each do |exhibition| %>
                <li>
                  <%= link_to exhibition_path(exhibition.slug), 
                      class: "text-black hover:underline" do %>
                    <strong><%= exhibition.title %></strong>
                    <% if exhibition.year.present? %>
                      <span class="text-gray-600"> (<%= exhibition.year %>)</span>
                    <% end %>
                    <% if exhibition.venue.present? %>
                      <span class="text-gray-600"> — <%= exhibition.venue %></span>
                    <% end %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Back button -->
        <div class="mt-12">
          <%= link_to :back, class: "inline-flex items-center text-gray-600 hover:text-black" do %>
            <i class="fa-solid fa-arrow-left mr-2"></i>
            Back to Gallery
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
