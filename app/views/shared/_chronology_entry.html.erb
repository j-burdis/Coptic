<div class="border-b border-gray-200 pb-6 mb-6 last:border-0">
  <div>
    <h3 class="text-lg md:text-xl font-semibold text-gray-500 mb-3"><%= resource.year_display %></h3>
  </div>
  
  <div class="flex gap-4 md:gap-6 items-start">
    <!-- content full width if no image, half width if image present -->
    <div class="<%= resource.cloudinary_public_id.present? ? 'w-1/2' : 'w-full' %>">
      <% if resource.description.present? %>
        <div class="prose prose-sm md:prose max-w-none text-pretty">
          <%= simple_format(resource.description) %>
        </div>
      <% end %>
    </div>

    <!-- optional image on the right -->
    <% if resource.cloudinary_public_id.present? %>
      <div class="flex-shrink-0 w-1/2 md:w-auto">
        <%= image_tag resource.image_url,
            alt: resource.year_display,
            class: "w-full md:w-auto md:max-w-full object-cover" %>
        <% if resource.image_caption.present? %>
          <p class="text-xs md:text-sm text-gray-500 mt-2 text-pretty"><%= resource.image_caption %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
